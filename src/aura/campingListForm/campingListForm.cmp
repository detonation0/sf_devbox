<aura:component description="campingListForm">
    <aura:attribute name="newItem" type="Camping_Item__c"
                    default="{ 'sobjectType': 'Camping_Item__c',
                    'Name': '',
                    'Quantity__c': 0,
                    'Price__c': 0,
                    'Packed__c': false }"/>
    <aura:registerEvent name="addItem" type="c:addItemEvent"/>

    <form class="slds-form--stacked">

        <div class="slds-form-element slds-is-required">
            <div class="slds-form-element__control">
                <lightning:input aura:id="itemname" label="Name" name="name"
                              value="{!v.newItem.Name}" required="true"/>
            </div>
        </div>

        <div class="slds-form-element slds-is-required">
            <div class="slds-form-element__control">
                <lightning:input type="Number" aura:id="itmquantity" label="Quantity" name="quantity"
                                value="{!v.newItem.Quantity__c}" required="true"/>
            </div>
        </div>

        <div class="slds-form-element">
            <div class="slds-form-element__control">
                <lightning:input type="number" aura:id="itmprice" label="Price" value="{!v.newItem.Price__c}" name="price" formatter="currency"/>
            </div>
        </div>

        <div class="slds-form-element">
            <lightning:input type="toggle" aura:id="packed" label="Packed?" name="packed"
                              value="{!v.newItem.Packed__c}" messageToggleActive="Yes" messageToggleInactive="No"/>
        </div>

        <div class="slds-form-element">
            <lightning:button label="Create Camping Item" variant="brand" onclick="{!c.submitForm}"/>
        </div>
    </form>
</aura:component>
